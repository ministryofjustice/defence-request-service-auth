<%= render 'shared/error_messages', object: @application %>

<h1><%= t('.title') %></h1>

<%= form_for @application, url: doorkeeper_submit_path(@application) do |f| %>
  <%= render 'form', f: f %>

  <div class="actions">
    <%= f.submit t('update_application'), class: "button" %>
    <%= link_to t('back'), oauth_applications_path %>
  </div>
<%- end %>
