= render 'shared/error_messages', object: resource
%h2 
  = t('.header')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .field
    = f.label :email, t('.labels.email')
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :password, t('.labels.password_confirmation')
    - if @validatable
      %em
        = t('.hints.password_min_length', minimum_password_length: @minimum_password_length)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, t('.labels.password_confirmation')
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit t('.submit'), class: 'button'
= render "devise/shared/links"
