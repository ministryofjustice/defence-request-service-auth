<%= flash_messages %>

<h1>Listing Roles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %>
        <td><%= link_to t('delete'), role, method: :delete, onclick: "return confirm('#{t('are_you_sure')}')}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path %>
