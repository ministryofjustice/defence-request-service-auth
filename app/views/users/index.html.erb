<%= render 'shared/flash_messages' %>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user == current_user %>
        <tr>
          <td><em><%= user.email %></em></td>
          <td></td>
          <td></td>
        </tr>
      <% else %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to t('edit'), edit_user_path(user) %></td>
          <td><%= link_to t('delete'), user, method: :delete, onclick: "return confirm('#{t('are_you_sure')}')}" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
