<%= render 'shared/error_messages', object: @profile_form %>

<h1>New Profile</h1>

<%= form_for(@profile_form, url: { action: 'create' }) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :tel %>
  <%= f.text_field :tel %>

  <%= f.label :mobile %>
  <%= f.text_field :mobile %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :postcode %>
  <%= f.text_field :postcode %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :associated_user %>
  <%= f.check_box :associated_user %>

  <div id="associated-user-password-fields">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Profile' %>
  </div>
<% end %>

<%= link_to 'Back', profiles_path %>
