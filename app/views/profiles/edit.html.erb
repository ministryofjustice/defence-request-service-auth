<%= render 'shared/error_messages', object: @profile_form %>

<h1><%= t('edit_profile') %></h1>

<%= form_for(@profile_form) do |f| %>
  <%= render 'form', f: f %>

  <%- if @profile_form.model[:user].persisted? %>
  <p>
    <%= link_to t("change_password"), edit_user_path(@profile_form.model[:user]) %>
  </p>
  <% else %>
    <%= render 'create_password', f: f %>
  <%- end %>
  <div class="actions">
    <%= f.submit t('update_profile'), class: "button" %>
  </div>
<% end %>

<%= link_to t('back'), profiles_path %>
