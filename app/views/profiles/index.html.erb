<%= flash_messages %>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%# link_to t('show'), organisation_path(organisation) %></td>
        <td><%= link_to t('edit'), edit_profile_path(profile) %></td>
        <td><%= link_to t('delete'), profile, method: :delete, onclick: "return confirm('#{t('are_you_sure')}')}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_profile'), new_profile_path %>
