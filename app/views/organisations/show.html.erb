<h3><%= t('members') %></h3>

<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if @organisation.profiles.any? %>
      <% @organisation.profiles.each do |profile| %>
        <tr id='<%= profile.id %>-row'>
          <td><%= profile.name %></td>
          <td><%= link_to t('new_permission'), new_permission_path({ organisation_id: @organisation.id, user_id: profile.user.id }) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><td>No members</td></tr>
    <% end %>
  </tbody>
</table>

